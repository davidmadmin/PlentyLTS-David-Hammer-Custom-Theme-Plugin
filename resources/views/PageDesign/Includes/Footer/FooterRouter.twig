        bottomText: bottomText | default('© 2002–2026 ACME CORP Shop | ACME INC. Alle Rechte vorbehalten.'),
        shippingMethods: shippingMethods | default([])
    } %}
{% else %}
    {% include "HammerTheme::PageDesign.Includes.Footer.FH" with {
        bottomText: bottomText | default('© 2002–2026 ACME CORP Shop | ACME INC. Alle Rechte vorbehalten.'),
        shippingMethods: shippingMethods | default([])
    } %}
{% endif %}
